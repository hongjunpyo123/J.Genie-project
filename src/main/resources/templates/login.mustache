<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>JGenie - 로그인</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            min-height: 100dvh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 16px;
            padding-top: max(16px, env(safe-area-inset-top));
            padding-bottom: max(16px, env(safe-area-inset-bottom));
            overflow-x: hidden;
            opacity: 0;
            animation: fadeIn 0.6s ease-out forwards;
            position: relative;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        @keyframes fadeIn {
            to { opacity: 1; }
        }

        /* 네온 불빛 효과 */
        .neon-glow {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        .neon-light {
            position: absolute;
            width: clamp(150px, 40vw, 200px);
            height: clamp(150px, 40vw, 200px);
            border-radius: 50%;
            background: radial-gradient(circle, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.08) 50%, transparent 80%);
            animation: neonFloat 8s ease-in-out infinite;
            filter: blur(20px);
        }

        .neon-light:nth-child(1) {
            top: 10%;
            left: -25%;
            animation-delay: 0s;
            animation-duration: 12s;
        }

        .neon-light:nth-child(2) {
            bottom: 20%;
            right: -25%;
            animation-delay: 3s;
            animation-duration: 10s;
        }

        .neon-light:nth-child(3) {
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation-delay: 6s;
            animation-duration: 14s;
            width: clamp(200px, 50vw, 300px);
            height: clamp(200px, 50vw, 300px);
        }

        @keyframes neonFloat {
            0%, 100% {
                transform: translateY(0) scale(1);
                opacity: 0.3;
            }
            25% {
                transform: translateY(-30px) scale(1.1);
                opacity: 0.5;
            }
            50% {
                transform: translateY(-10px) scale(0.9);
                opacity: 0.4;
            }
            75% {
                transform: translateY(-40px) scale(1.05);
                opacity: 0.6;
            }
        }

        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .particle {
            position: absolute;
            width: clamp(3px, 1vw, 4px);
            height: clamp(3px, 1vw, 4px);
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }

        .particle:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; }
        .particle:nth-child(2) { top: 60%; left: 20%; animation-delay: 1s; }
        .particle:nth-child(3) { top: 40%; left: 80%; animation-delay: 2s; }
        .particle:nth-child(4) { top: 80%; left: 70%; animation-delay: 3s; }
        .particle:nth-child(5) { top: 30%; left: 50%; animation-delay: 4s; }

        @keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
                opacity: 0.2;
            }
            50% {
                transform: translateY(-20px) rotate(180deg);
                opacity: 0.5;
            }
        }

        .login-container {
            width: 100%;
            max-width: clamp(320px, 90vw, 380px);
            padding: 0 clamp(16px, 4vw, 20px);
            opacity: 0;
            transform: translateY(20px);
            animation: slideUp 0.7s ease-out 0.2s forwards;
            z-index: 2;
            position: relative;
        }

        /* 회원가입 전환 효과 */
        body.fade-out * {
            opacity: 0;
            transition: opacity 0.5s ease-out;
        }

        @keyframes slideUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo {
            text-align: center;
            margin-bottom: clamp(40px, 10vw, 60px);
            opacity: 0;
            animation: fadeIn 0.5s ease-out 0.5s forwards;
        }

        .logo h1 {
            font-size: clamp(2.5rem, 8vw, 3.5rem);
            font-weight: 600;
            background: linear-gradient(135deg,
                rgba(255, 255, 255, 0.95) 0%,
                rgba(255, 255, 255, 0.8) 50%,
                rgba(102, 126, 234, 0.9) 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 12px;
            letter-spacing: -0.02em;
            animation: gentleBounce 4s ease-in-out 1.2s infinite, logoGlow 3s ease-in-out infinite;
            will-change: transform;
            filter: drop-shadow(0 0 15px rgba(255, 255, 255, 0.4));
        }

        @keyframes gentleBounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-3px);
            }
            60% {
                transform: translateY(-1px);
            }
        }

        @keyframes logoGlow {
            0%, 100% {
                filter: drop-shadow(0 0 15px rgba(255, 255, 255, 0.4));
            }
            50% {
                filter: drop-shadow(0 0 25px rgba(102, 126, 234, 0.5));
            }
        }

        .logo p {
            color: rgba(255, 255, 255, 0.85);
            font-size: clamp(0.85rem, 3.5vw, 1rem);
            font-weight: 400;
            letter-spacing: 0.01em;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .form-group {
            margin-bottom: clamp(24px, 6vw, 32px);
            position: relative;
            opacity: 0;
            transform: translateY(15px);
            animation: formSlideIn 0.4s ease-out forwards;
        }

        .form-group:nth-child(1) {
            animation-delay: 0.8s;
        }

        .form-group:nth-child(2) {
            animation-delay: 0.9s;
        }

        @keyframes formSlideIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-group label {
            display: block;
            color: rgba(255, 255, 255, 0.9);
            font-size: clamp(0.85rem, 3vw, 0.95rem);
            font-weight: 400;
            margin-bottom: clamp(8px, 3vw, 12px);
            transition: color 0.2s ease;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
        }

        .form-group input {
            width: 100%;
            padding: clamp(16px, 4vw, 20px) 0;
            border: none;
            border-bottom: 2px solid rgba(255, 255, 255, 0.3);
            background: transparent;
            font-size: clamp(1rem, 4vw, 1.1rem);
            font-weight: 400;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            outline: none;
            color: rgba(255, 255, 255, 0.95);
            font-family: inherit;
            touch-action: manipulation;
        }

        .form-group input::placeholder {
            color: rgba(255, 255, 255, 0.5);
            font-weight: 300;
            transition: all 0.3s ease;
            font-size: clamp(0.9rem, 3.5vw, 1rem);
        }

        .form-group input:focus {
            border-bottom-color: rgba(102, 126, 234, 0.8);
            box-shadow: 0 3px 20px rgba(102, 126, 234, 0.3);
            transform: translateY(-2px);
        }

        .form-group input:focus::placeholder {
            color: rgba(255, 255, 255, 0.7);
            transform: translateX(5px);
        }

        .login-btn {
            width: 100%;
            padding: clamp(16px, 4vw, 20px);
            background: linear-gradient(145deg,
                rgba(102, 126, 234, 0.4) 0%,
                rgba(118, 75, 162, 0.3) 50%,
                rgba(102, 126, 234, 0.3) 100%);
            border: 2px solid rgba(102, 126, 234, 0.5);
            border-radius: 50px;
            color: rgba(255, 255, 255, 0.98);
            font-size: clamp(1rem, 4vw, 1.1rem);
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            margin: clamp(30px, 8vw, 50px) 0 0;
            letter-spacing: 0.3px;
            backdrop-filter: blur(20px);
            opacity: 0;
            transform: translateY(15px);
            animation: formSlideIn 0.4s ease-out 1.0s forwards;
            box-shadow:
                0 10px 40px rgba(102, 126, 234, 0.3),
                0 5px 20px rgba(118, 75, 162, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            touch-action: manipulation;
            min-height: 44px;
        }

        .login-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg,
                transparent 0%,
                rgba(255, 255, 255, 0.2) 50%,
                transparent 100%);
            transition: left 0.6s ease;
        }

        .login-btn .btn-text {
            display: inline-block;
            transition: all 0.3s ease;
        }

        .login-btn:hover {
            background: linear-gradient(145deg,
                rgba(102, 126, 234, 0.5) 0%,
                rgba(118, 75, 162, 0.4) 50%,
                rgba(102, 126, 234, 0.4) 100%);
            border-color: rgba(102, 126, 234, 0.7);
            box-shadow:
                0 15px 50px rgba(102, 126, 234, 0.4),
                0 8px 25px rgba(118, 75, 162, 0.3),
                0 0 40px rgba(102, 126, 234, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.4);
            transform: translateY(-3px) scale(1.02);
        }

        .login-btn:hover::before {
            left: 100%;
        }

        .login-btn:hover .btn-text {
            transform: translateY(-1px);
        }

        .login-btn:active {
            transform: translateY(-1px) scale(1.01);
        }

        .login-btn:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .error-message {
            color: #ff6b6b;
            font-size: clamp(0.8rem, 3vw, 0.9rem);
            text-align: center;
            margin-top: 20px;
            opacity: 0;
            transform: translateY(-10px);
            transition: all 0.3s ease;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
        }

        .error-message.show {
            opacity: 1;
            transform: translateY(0);
        }

        .signup-section {
            text-align: center;
            margin-top: clamp(30px, 8vw, 40px);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: clamp(6px, 2vw, 8px);
            opacity: 0;
            animation: fadeIn 0.4s ease-out 1.1s forwards;
            flex-wrap: wrap;
        }

        .signup-text {
            color: rgba(255, 255, 255, 0.8);
            font-size: clamp(0.85rem, 3vw, 0.95rem);
            font-weight: 400;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
        }

        .signup-btn {
            background: transparent;
            border: none;
            color: rgba(255, 255, 255, 0.95);
            padding: clamp(6px, 2vw, 6px) clamp(10px, 3vw, 12px);
            border-radius: 6px;
            font-size: clamp(0.85rem, 3vw, 0.95rem);
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
            touch-action: manipulation;
            min-height: 44px;
            display: flex;
            align-items: center;
        }

        .signup-btn:hover {
            background: rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 1);
            text-decoration: underline;
            text-underline-offset: 2px;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
        }

        /* 작은 모바일 화면 대응 */
        @media (max-width: 375px) {
            .login-container {
                padding: 0 12px;
            }

            .signup-section {
                flex-direction: column;
                gap: 10px;
            }
        }

        /* 매우 작은 화면 대응 */
        @media (max-width: 320px) {
            .login-container {
                padding: 0 10px;
            }

            .form-group {
                margin-bottom: 20px;
            }

            .signup-section {
                margin-top: 25px;
            }
        }

        /* 큰 모바일/태블릿 대응 */
        @media (min-width: 768px) {
            .login-container {
                max-width: 420px;
            }
        }

        /* iOS Safari 특화 */
        @supports (-webkit-touch-callout: none) {
            body {
                min-height: -webkit-fill-available;
            }
        }

        /* 터치 디바이스 전용 스타일 */
        @media (hover: none) and (pointer: coarse) {
            .login-btn:hover {
                transform: none;
                background: linear-gradient(145deg,
                    rgba(102, 126, 234, 0.4) 0%,
                    rgba(118, 75, 162, 0.3) 50%,
                    rgba(102, 126, 234, 0.3) 100%);
            }

            .signup-btn:hover {
                background: transparent;
                text-decoration: none;
            }
        }

        @media (prefers-reduced-motion: reduce) {
            *, *::before, *::after {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
</head>
<body>
<div class="neon-glow">
    <div class="neon-light"></div>
    <div class="neon-light"></div>
    <div class="neon-light"></div>
</div>

<div class="particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
</div>

<div class="login-container">
    <div class="logo">
        <h1>JGenie</h1>
        <p>당신만의 맞춤 자기소개서</p>
    </div>

    <form class="login-form">
        <div class="form-group">
            <label for="username">아이디</label>
            <input type="text" id="username" name="username" autocomplete="off" placeholder="아이디를 입력하세요" required>
        </div>

        <div class="form-group">
            <label for="password">비밀번호</label>
            <input type="password" id="password" name="password" autocomplete="off" placeholder="비밀번호를 입력하세요" required>
        </div>

        <button type="submit" class="login-btn">
            <span class="btn-text">준비 되셨나요?</span>
        </button>

        <div class="error-message" id="errorMessage">
            아이디 또는 비밀번호를 확인해주세요
        </div>
    </form>

    <div class="signup-section">
        <span class="signup-text">계정이 없으신가요?</span>
        <button type="button" class="signup-btn">회원가입</button>
    </div>
</div>

<script>
    const inputs = document.querySelectorAll('input');
    const loginForm = document.querySelector('.login-form');
    const loginBtn = document.querySelector('.login-btn');
    const signupBtn = document.querySelector('.signup-btn');
    const errorMessage = document.getElementById('errorMessage');

    // Input 포커스 효과
    inputs.forEach(input => {
        input.addEventListener('focus', function() {
            this.parentElement.querySelector('label').style.color = 'rgba(255, 255, 255, 1)';
        });

        input.addEventListener('blur', function() {
            if (!this.value) {
                this.parentElement.querySelector('label').style.color = 'rgba(255, 255, 255, 0.9)';
            }
        });

        input.addEventListener('input', function() {
            // 에러 메시지 숨기기 (사용자가 입력할 때)
            errorMessage.classList.remove('show');

            if (this.value.length > 0) {
                this.style.borderBottomColor = 'rgba(102, 126, 234, 0.8)';
                this.style.boxShadow = '0 3px 20px rgba(102, 126, 234, 0.3)';
                this.style.transform = 'translateY(-2px)';
            } else {
                this.style.borderBottomColor = 'rgba(255, 255, 255, 0.3)';
                this.style.boxShadow = 'none';
                this.style.transform = 'translateY(0)';
            }
        });

        input.addEventListener('blur', function() {
            if (!this.value) {
                this.style.transform = 'translateY(0)';
                this.style.borderBottomColor = 'rgba(255, 255, 255, 0.3)';
                this.style.boxShadow = 'none';
            }
        });
    });

    // 로그인 폼 제출 처리
    loginForm.addEventListener('submit', async function(e) {
        e.preventDefault();

        const usernameInput = document.getElementById('username');
        const passwordInput = document.getElementById('password');
        const btnText = loginBtn.querySelector('.btn-text');
        const originalText = btnText.innerHTML;

        // 입력값 검증
        if (!usernameInput.value.trim() || !passwordInput.value.trim()) {
            showError();
            return;
        }

        // 버튼 비활성화 및 로딩 상태
        loginBtn.disabled = true;
        btnText.innerHTML = '잠깐만요...';
        loginBtn.style.opacity = '0.8';
        loginBtn.style.transform = 'translateY(-1px) scale(1.01)';

        try {
            const response = await fetch('/user/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id: usernameInput.value.trim(),
                    password: passwordInput.value.trim()
                })
            });

            if (response.status === 200) {
                // 로그인 성공 - 페이드아웃 효과와 함께 페이지 이동
                btnText.innerHTML = '성공!';

                // 모든 요소들이 서서히 사라지게 하는 효과
                document.body.classList.add('fade-out');

                // 0.5초 후 페이지 이동 (fade-out 애니메이션 완료 후)
                setTimeout(() => {
                    window.location.href = '/main/home';
                }, 500);
            } else {
                // 로그인 실패
                showError();
                resetButton();
            }
        } catch (error) {
            console.error('로그인 요청 실패:', error);
            showError();
            resetButton();
        }

        function resetButton() {
            setTimeout(() => {
                loginBtn.disabled = false;
                btnText.innerHTML = originalText;
                loginBtn.style.opacity = '1';
                loginBtn.style.transform = 'translateY(-3px) scale(1.02)';
            }, 500);
        }
    });

    // 에러 메시지 표시 함수
    function showError() {
        errorMessage.classList.add('show');

        // 3초 후 자동으로 에러 메시지 숨기기
        setTimeout(() => {
            errorMessage.classList.remove('show');
        }, 3000);
    }

    // 회원가입 버튼 클릭 처리
    signupBtn.addEventListener('click', function() {
        // 모든 요소들이 서서히 사라지게 하는 효과
        document.body.classList.add('fade-out');

        // 0.5초 후 페이지 이동 (fade-out 애니메이션 완료 후)
        setTimeout(() => {
            window.location.href = '/signup';
        }, 500);
    });

    // 추가 파티클 생성
    function createAdditionalParticles() {
        const particlesContainer = document.querySelector('.particles');
        const particleCount = 8;

        for (let i = 0; i < particleCount; i++) {
            const particle = document.createElement('div');
            particle.classList.add('particle');

            particle.style.top = Math.random() * 100 + '%';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.animationDelay = Math.random() * 6 + 's';
            particle.style.animationDuration = (4 + Math.random() * 4) + 's';

            particlesContainer.appendChild(particle);
        }
    }

    window.addEventListener('load', createAdditionalParticles);

    // Enter 키로 로그인 처리
    inputs.forEach(input => {
        input.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                loginForm.dispatchEvent(new Event('submit'));
            }
        });
    });
</script>
</body>
</html>