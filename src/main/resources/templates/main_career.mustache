            color: white;
            padding: 12px 20px;
            border-radius: 25px;
            font-size: clamp(0.8rem, 3vw, 0.85rem);
            font-weight: 500;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            z-index: 50;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .toast.show {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }

        .toast.error {
