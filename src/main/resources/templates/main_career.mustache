<script>
    // Ï†ÑÏó≠ Î≥ÄÏàò
    let careersData = [];

    // Î∞∞Í≤Ω ÌååÌã∞ÌÅ¥ ÏÉùÏÑ±
    function createParticles() {
        const particlesContainer = document.getElementById('particles');
        const particleCount = 10;

        for (let i = 0; i < particleCount; i++) {
            const particle = document.createElement('div');
            particle.classList.add('particle');

            particle.style.top = Math.random() * 100 + '%';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.animationDelay = Math.random() * 8 + 's';
            particle.style.animationDuration = (6 + Math.random() * 4) + 's';

            particlesContainer.appendChild(particle);
        }
    }

    // APIÏóêÏÑú Ïª§Î¶¨Ïñ¥ Îç∞Ïù¥ÌÑ∞ Í∞ÄÏ†∏Ïò§Í∏∞
    async function fetchCareersData() {
        try {
            const response = await fetch('/careers');
            if (!response.ok) {
                throw new Error('Ïª§Î¶¨Ïñ¥ Îç∞Ïù¥ÌÑ∞Î•º Î∂àÎü¨Ïò¨ Ïàò ÏóÜÏäµÎãàÎã§.');
            }
            const data = await response.json();
            return data;
        } catch (error) {
            console.error('API Ìò∏Ï∂ú Ïò§Î•ò:', error);
            throw error;
        }
    }

    // Ïª§Î¶¨Ïñ¥ ÏÇ≠Ï†ú Ìï®Ïàò
    async function deleteCareer(careerId) {
        try {
            const response = await fetch(`/career/${careerId}`, {
                method: 'DELETE'
            });

            if (response.status === 200) {
                showToast('Ïª§Î¶¨Ïñ¥Í∞Ä ÏÑ±Í≥µÏ†ÅÏúºÎ°ú ÏÇ≠Ï†úÎêòÏóàÏäµÎãàÎã§!', 'success');
                // API Ïû¨Ìò∏Ï∂úÎ°ú Îç∞Ïù¥ÌÑ∞ ÏóÖÎç∞Ïù¥Ìä∏
                const careers = await fetchCareersData();
                renderCareers(careers);
            } else {
                showToast('ÏÇ≠Ï†úÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§', 'error');
            }
        } catch (error) {
            console.error('Ïª§Î¶¨Ïñ¥ ÏÇ≠Ï†ú Ïò§Î•ò:', error);
            showToast('ÏÇ≠Ï†úÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§', 'error');
        }
    }

    // ÌÜ†Ïä§Ìä∏ Î©îÏãúÏßÄ ÌëúÏãú Ìï®Ïàò
    function showToast(message, type = 'success') {
        const toast = document.getElementById('successToast');
        toast.textContent = message;

        // ÌÉÄÏûÖÏóê Îî∞Îùº ÌÅ¥ÎûòÏä§ ÏÑ§Ï†ï
        toast.className = 'toast';
        if (type === 'error') {
            toast.classList.add('error');
        }

        toast.classList.add('show');

        setTimeout(() => {
            toast.classList.remove('show');
        }, 3000);
    }

    // Ïª§Î¶¨Ïñ¥ Îç∞Ïù¥ÌÑ∞ Î†åÎçîÎßÅ
    function renderCareers(careers) {
        careersData = careers;
        const careersStack = document.getElementById('careersStack');
        const emptyState = document.getElementById('emptyState');

        // Í∏∞Ï°¥ ÎÇ¥Ïö© Ï¥àÍ∏∞Ìôî
        careersStack.innerHTML = '';

        if (careers.length === 0) {
            emptyState.style.display = 'block';
            return;
        }

        emptyState.style.display = 'none';

        // Ïª§Î¶¨Ïñ¥ ÏïÑÏù¥ÌÖúÎì§ Î†åÎçîÎßÅ (ÏµúÏã†ÏàúÏúºÎ°ú Ï†ïÎ†¨)
        careers.forEach((career, index) => {
            const careerItem = document.createElement('div');
            careerItem.className = 'career-item';
            careerItem.style.animationDelay = `${index * 0.1}s`;

            careerItem.innerHTML = `
                <button class="delete-btn" onclick="deleteCareer(${career.careerId})"></button>
                <div class="career-header">
                    <span class="career-type">${career.careerType}</span>
                </div>
                <h3 class="career-title">${career.careerTitle}</h3>
                <p class="career-content">${career.careerContent}</p>
            `;

            careersStack.appendChild(careerItem);
        });
    }

    // Ïª§Î¶¨Ïñ¥ Ï∂îÍ∞Ä Î™®Îã¨ Ïó¥Í∏∞
    function openCareerModal() {
        const modal = document.getElementById('careerModal');
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';

        // Ìèº Ï¥àÍ∏∞Ìôî
        document.getElementById('careerForm').reset();
        document.getElementById('errorMessage').style.display = 'none';
    }

    // Î™®Îã¨ Îã´Í∏∞
    function closeCareerModal() {
        const modal = document.getElementById('careerModal');
        modal.classList.remove('active');
        document.body.style.overflow = '';

        // Ìèº Ï¥àÍ∏∞Ìôî
        document.getElementById('careerForm').reset();
        document.getElementById('errorMessage').style.display = 'none';
    }

    // ÏÑ±Í≥µ ÌÜ†Ïä§Ìä∏ ÌëúÏãú
    function showSuccessToast() {
        showToast('Ïª§Î¶¨Ïñ¥Í∞Ä ÏÑ±Í≥µÏ†ÅÏúºÎ°ú Îì±Î°ùÎêòÏóàÏäµÎãàÎã§!', 'success');
    }

    // Ïò§Î•ò Î©îÏãúÏßÄ ÌëúÏãú
    function showErrorMessage(message) {
        const errorElement = document.getElementById('errorMessage');
        errorElement.textContent = message;
        errorElement.style.display = 'block';
    }

    // Ïª§Î¶¨Ïñ¥ Îì±Î°ù Ï≤òÎ¶¨
    async function handleCareerSubmit(formData) {
        const submitButton = document.getElementById('modalSubmit');

        // Î≤ÑÌäº ÎπÑÌôúÏÑ±Ìôî Î∞è Î°úÎî© ÏÉÅÌÉú
        submitButton.disabled = true;
        submitButton.textContent = 'Îì±Î°ù Ï§ë...';

        try {
            const response = await fetch('/career/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    careerType: formData.get('careerType'),
                    careerTitle: formData.get('careerTitle'),
                    careerContent: formData.get('careerContent')
                })
            });

            if (response.status === 200) {
                // ÏÑ±Í≥µ Ï≤òÎ¶¨
                closeCareerModal();
                showSuccessToast();

                // API Ïû¨Ìò∏Ï∂úÎ°ú Îç∞Ïù¥ÌÑ∞ ÏóÖÎç∞Ïù¥Ìä∏
                const careers = await fetchCareersData();
                renderCareers(careers);
            } else {
                // Ïã§Ìå® Ï≤òÎ¶¨
                showErrorMessage('Îì±Î°ùÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§');
            }
        } catch (error) {
            console.error('Ïª§Î¶¨Ïñ¥ Îì±Î°ù Ïò§Î•ò:', error);
            showErrorMessage('Îì±Î°ùÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§');
        } finally {
            // Î≤ÑÌäº ÏÉÅÌÉú Î≥µÏõê
            submitButton.disabled = false;
            submitButton.textContent = 'Îì±Î°ùÌïòÍ∏∞';
        }
    }

    // Î©îÏù∏ ÏûêÏÜåÏÑú Î≤ÑÌäº ÌÅ¥Î¶≠ Ïù¥Î≤§Ìä∏
    const mainButton = document.getElementById('mainButton');
    if (mainButton) {
        mainButton.addEventListener('click', function() {
            window.location.href = '/coverletter';
        });
    }

    // Ïù¥Î≤§Ìä∏ Î¶¨Ïä§ÎÑà ÏÑ§Ï†ï
    document.addEventListener('DOMContentLoaded', function() {
        // Ïª§Î¶¨Ïñ¥ Ï∂îÍ∞Ä Î≤ÑÌäº
        document.getElementById('addCareerBtn').addEventListener('click', openCareerModal);

        // Î™®Îã¨ Îã´Í∏∞ Î≤ÑÌäºÎì§
        document.getElementById('modalClose').addEventListener('click', closeCareerModal);
        document.getElementById('modalCancel').addEventListener('click', closeCareerModal);

        // Î™®Îã¨ Ïô∏Î∂Ä ÌÅ¥Î¶≠Ïãú Îã´Í∏∞
        document.getElementById('careerModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeCareerModal();
            }
        });

        // Ïª§Î¶¨Ïñ¥ Ìèº Ï†úÏ∂ú
        document.getElementById('careerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            handleCareerSubmit(formData);
        });

        // ÎÑ§ÎπÑÍ≤åÏù¥ÏÖò ÏïÑÏù¥ÌÖú ÌÅ¥Î¶≠ Ïù¥Î≤§Ìä∏
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function(e) {
                if (this.classList.contains('active')) {
                    e.preventDefault();
                    return;
                }

                document.querySelectorAll('.nav-item').forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');
            });
        });
    });

    // ÌéòÏù¥ÏßÄ Î°úÎìú Ïãú Ï¥àÍ∏∞Ìôî
    window.addEventListener('load', async () => {
        createParticles();

        try {
            // APIÏóêÏÑú Ïª§Î¶¨Ïñ¥ Îç∞Ïù¥ÌÑ∞ Í∞ÄÏ†∏ÏôÄÏÑú Î†åÎçîÎßÅ
            const careers = await fetchCareersData();
            renderCareers(careers);
        } catch (error) {
            console.error('Ïª§Î¶¨Ïñ¥ Îç∞Ïù¥ÌÑ∞ Î°úÎìú Ïã§Ìå®:', error);
            // Ïò§Î•ò Î∞úÏÉù Ïãú Îπà ÏÉÅÌÉú ÌëúÏãú
            document.getElementById('emptyState').style.display = 'block';
        }
    });
</script>
